{
  "info": {
    "name": "Carbon Credit - MoMo Payment API",
    "description": "Test MoMo payment integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Login (Get JWT Token)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"buyer001\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "auth", "login"]
        }
      },
      "response": []
    },
    {
      "name": "2. Get My Wallet (Before Payment)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer YOUR_JWT_TOKEN_HERE",
            "description": "Replace with token from login"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/api/wallets/my-wallet",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "wallets", "my-wallet"]
        }
      },
      "response": []
    },
    {
      "name": "3. Create MoMo Payment",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer YOUR_JWT_TOKEN_HERE",
            "description": "Replace with token from login"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amountUsd\": 20.00\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/wallets/deposit/momo",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "wallets", "deposit", "momo"]
        }
      },
      "response": []
    },
    {
      "name": "4. Get My Wallet (After Payment)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer YOUR_JWT_TOKEN_HERE",
            "description": "Replace with token from login"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/api/wallets/my-wallet",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "wallets", "my-wallet"]
        }
      },
      "response": []
    }
  ]
}
