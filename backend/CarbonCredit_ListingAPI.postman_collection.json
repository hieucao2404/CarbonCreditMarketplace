{
  "info": {
    "name": "Carbon Credit - Listing API (Phase 3)",
    "description": "API for EV Owners to list credits and Buyers to browse them.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "evowner_username",
      "value": "evowner1",
      "type": "string"
    },
    {
      "key": "evowner_password",
      "value": "EV123",
      "type": "string"
    },
    {
      "key": "listing_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "credit_id",
      "value": "",
      "comment": "This should be set by the 'CarbonCredit_CreditsAPI' collection",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "comment": "Set this to your EV Owner's UUID to test 'Get User Listings'",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. EV Owner - Create Listing",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201 Created\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "var jsonData = pm.response.json();",
              "",
              "pm.test(\"Listing ID is returned\", function () {",
              "    pm.expect(jsonData.data.listingId).to.not.be.empty;",
              "    pm.collectionVariables.set(\"listing_id\", jsonData.data.listingId);",
              "    console.log(\"Saved listing_id: \" + jsonData.data.listingId);",
              "});",
              "",
              "pm.test(\"Status is ACTIVE\", function () {",
              "    pm.expect(jsonData.data.status).to.eql(\"ACTIVE\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"creditId\": \"{{credit_id}}\",\n  \"price\": 25.50\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/listings",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "listings"
          ]
        },
        "auth": {
          "type": "basic",
          "basic": [
            {
              "key": "username",
              "value": "{{evowner_username}}",
              "type": "string"
            },
            {
              "key": "password",
              "value": "{{evowner_password}}",
              "type": "string"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "2. Public - Get Active Listings",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/listings?page=0&size=10&sortBy=price_asc",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "listings"
          ],
          "query": [
            {
              "key": "page",
              "value": "0"
            },
            {
              "key": "size",
              "value": "10"
            },
            {
              "key": "sortBy",
              "value": "price_asc"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "3. Public - Get Listing by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/listings/{{listing_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "listings",
            "{{listing_id}}"
          ]
        }
      },
      "response": []
    },
    {
      "name": "4. EV Owner - Update Listing Price",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"newPrice\": 29.99\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/listings/{{listing_id}}/price",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "listings",
            "{{listing_id}}",
            "price"
          ]
        },
        "auth": {
          "type": "basic",
          "basic": [
            {
              "key": "username",
              "value": "{{evowner_username}}",
              "type": "string"
            },
            {
              "key": "password",
              "value": "{{evowner_password}}",
              "type": "string"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "5. Public - Search Listings by Price",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/listings/search?minPrice=20&maxPrice=30",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "listings",
            "search"
          ],
          "query": [
            {
              "key": "minPrice",
              "value": "20"
            },
            {
              "key": "maxPrice",
              "value": "30"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "6. Public - Get User's Active Listings",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "// This test needs a user_id.",
              "// You can get this by running 'Get My Credits' from the CreditsAPI",
              "// and copying the 'ownerId' from the response into the ",
              "// 'user_id' collection variable."
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/listings/user/{{user_id}}?page=0&size=5",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "listings",
            "user",
            "{{user_id}}"
          ],
          "query": [
            {
              "key": "page",
              "value": "0"
            },
            {
              "key": "size",
              "value": "5"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "7. Public - Get Marketplace Stats",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/listings/stats",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "listings",
            "stats"
          ]
        }
      },
      "response": []
    },
    {
      "name": "8. EV Owner - Cancel Listing",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/listings/{{listing_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "listings",
            "{{listing_id}}"
          ]
        },
        "auth": {
          "type": "basic",
          "basic": [
            {
              "key": "username",
              "value": "{{evowner_username}}",
              "type": "string"
            },
            {
              "key": "password",
              "value": "{{evowner_password}}",
              "type": "string"
            }
          ]
        }
      },
      "response": []
    }
  ]
}