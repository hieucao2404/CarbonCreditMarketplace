              "raw": "{{base_url}}/api/cva/journey/{{journey_id}}/approve?notes=Journey data validated. Energy consumption matches distance.",
              "host": ["{{base_url}}"],
              "path": ["api", "cva", "journey", "{{journey_id}}", "approve"],
              "query": [
                {
                  "key": "notes",
                  "value": "Journey data validated. Energy consumption matches distance."
                }
              ]
            },
            "auth": {
              "type": "basic",
              "basic": [
                {"key": "username", "value": "{{cva_username}}"},
                {"key": "password", "value": "{{cva_password}}"}
              ]
            }
          }
        },
        {
          "name": "2.4 Reject Journey",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/cva/journey/{{journey_id}}/reject?reason=Energy consumption too low for reported distance",
              "host": ["{{base_url}}"],
              "path": ["api", "cva", "journey", "{{journey_id}}", "reject"],
              "query": [
                {
                  "key": "reason",
                  "value": "Energy consumption too low for reported distance"
                }
              ]
            },
            "auth": {
              "type": "basic",
              "basic": [
                {"key": "username", "value": "{{cva_username}}"},
                {"key": "password", "value": "{{cva_password}}"}
