{
  "info": {
    "name": "Carbon Credit - User API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Register New User",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status is 201 Created\", function() {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test(\"Response has success=true\", function() {",
              "    var json = pm.response.json();",
              "    pm.expect(json.success).to.be.true;",
              "});",
              "",
              "pm.test(\"User ID is returned\", function() {",
              "    var json = pm.response.json();",
              "    pm.expect(json.data.id).to.not.be.null;",
              "    pm.environment.set(\"user_id\", json.data.id);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"{{test_user}}\",\n  \"email\": \"testuser@example.com\",\n  \"password\": \"{{test_pass}}\",\n  \"fullName\": \"Test User\",\n  \"phone\": \"0123456789\",\n  \"role\": \"EV_OWNER\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/users/register",
          "host": ["{{base_url}}"],
          "path": ["api", "users", "register"]
        }
      }
    },
    {
      "name": "2. Get Current User Profile",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status is 200 OK\", function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Username matches\", function() {",
              "    var json = pm.response.json();",
              "    pm.expect(json.data.username).to.equal(pm.environment.get(\"test_user\"));",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "auth": {
          "type": "basic",
          "basic": [
            {
              "key": "username",
              "value": "{{test_user}}",
              "type": "string"
            },
            {
              "key": "password",
              "value": "{{test_pass}}",
              "type": "string"
            }
          ]
        },
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/users/me",
          "host": ["{{base_url}}"],
          "path": ["api", "users", "me"]
        }
      }
    },
